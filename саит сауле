<script>
  function selectTab(name){
    document.querySelectorAll('.tab-btn').forEach(b=>b.classList.toggle('active', b.dataset.tab===name));
    ['music','acting','speech','model','mobile','web'].forEach(p=>{
      const el = document.getElementById('panel-'+p);
      if(el) el.style.display=(p===name)?'block':'none';
    })
  }

  selectTab('music');

  function submit(){
    const name = document.getElementById('name').value.trim();
    const phone = document.getElementById('phone').value.trim();
    const dir = document.getElementById('direction').value;
    if(!name || !phone){ alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, —É–∫–∞–∂–∏—Ç–µ –∏–º—è –∏ —Ç–µ–ª–µ—Ñ–æ–Ω.'); return; }
    const message = `–ù–æ–≤–∞—è –∑–∞—è–≤–∫–∞ —Å —Å–∞–π—Ç–∞:%0A–ò–º—è: ${name}%0A–¢–µ–ª–µ—Ñ–æ–Ω: ${phone}%0A–ù–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ: ${dir}`;
    const waLink = `https://wa.me/77478042900?text=${message}`;
    window.open(waLink, '_blank');
    document.getElementById('name').value=''; document.getElementById('phone').value='';
  }
</script>
